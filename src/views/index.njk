{% extends "layouts/base.njk" %}

{% block content %}
<div class="hero min-h-[80vh] bg-base-200">
    <div class="hero-content text-center">
        <div class="max-w-md">
            <h1 class="text-5xl font-bold">Markdown CMS</h1>
            <p class="py-6">Manage your markdown content with ease. Connect your GitHub repository and start editing your content right away.</p>
            {% if not user %}
                <div class="space-x-4">
                    <a href="/auth/signup" class="btn btn-primary">Get Started</a>
                    <a href="/auth/login" class="btn btn-ghost">Sign In</a>
                </div>
            {% else %}
                <a href="/dashboard" class="btn btn-primary">Go to Dashboard</a>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
