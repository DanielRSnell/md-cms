<div id="directory-selector" class="space-y-4">
    <div class="alert alert-info shadow-lg">
        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <div>
            <h3 class="font-bold">Select Content Directory</h3>
            <div class="text-sm">Choose the directory containing your markdown content.</div>
        </div>
    </div>
    
    <div class="form-control">
        <label class="label">
            <span class="label-text">Content Directory</span>
        </label>
        <select id="directory-select" class="select select-bordered w-full">
            <option value="">Loading directories...</option>
        </select>
    </div>
</div>

<script>
    async function loadDirectories() {
        try {
            const [owner, repo] = '${locals.user.selected_repo}'.split('/');
            const response = await fetch(`/github/repos/directories/${owner}/${repo}`);
            if (!response.ok) throw new Error('Failed to load directories');
            
            const directories = await response.json();
            
            const select = document.getElementById('directory-select');
            select.innerHTML = '<option value="">Select a directory</option>' +
                directories.map(dir => 
                    `<option value="${dir.path}">${dir.path}</option>`
                ).join('');

            select.addEventListener('change', async (e) => {
                const directory = e.target.value;
                if (!directory) return;

                try {
                    const response = await fetch('/github/repos/set-content-directory', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ directory })
                    });

                    if (!response.ok) throw new Error('Failed to set content directory');

                    const result = await response.json();
                    if (result.success) {
                        window.location.reload();
                    }
                } catch (error) {
                    console.error('Error setting content directory:', error);
                    alert('Failed to set content directory');
                }
            });
        } catch (error) {
            console.error('Error loading directories:', error);
            const select = document.getElementById('directory-select');
            select.innerHTML = '<option value="">Error loading directories</option>';
            
            const directorySelector = document.getElementById('directory-selector');
            const errorDiv = document.createElement('div');
            errorDiv.className = 'alert alert-error mt-4';
            errorDiv.innerHTML = `
                <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <div>
                    <h3 class="font-bold">Error loading directories</h3>
                    <div class="text-sm">${error.message}</div>
                </div>
                <button onclick="loadDirectories()" class="btn btn-sm">Retry</button>
            `;
            directorySelector.appendChild(errorDiv);
        }
    }

    loadDirectories();
</script>
