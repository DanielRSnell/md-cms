<div class="flex justify-between items-center mb-6">
    <h2 class="card-title text-2xl">Content Management System</h2>
    {% if user.github_username %}
        <div class="flex items-center gap-2">
            <div class="badge badge-neutral">@{{ user.github_username }}</div>
            {% if user.selected_repo %}
                <div class="badge badge-primary">{{ user.selected_repo }}</div>
            {% endif %}
            {% if user.content_directory %}
                <div class="badge badge-secondary">{{ user.content_directory }}</div>
            {% endif %}
        </div>
    {% endif %}
</div>
