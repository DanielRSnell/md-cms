{% extends "layouts/base.njk" %}

{% block content %}
<div class="container mx-auto px-4 py-6">
    <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
            {% include "components/dashboard/Header.njk" %}

            {% if not user.github_id %}
                {% include "components/dashboard/GitHubConnect.njk" %}
            {% elif not user.selected_repo %}
                {% include "components/dashboard/RepoSelector.njk" %}
            {% elif not user.content_directory %}
                {% include "components/dashboard/DirectorySelector.njk" %}
            {% else %}
                {% include "components/dashboard/ContentEditor.njk" %}
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
