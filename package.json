{
  "name": "markdown-cms",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:css\" \"npm run dev:server\"",
    "dev:css": "tailwindcss -i ./src/public/css/input.css -o ./src/public/css/style.css --watch",
    "dev:server": "nodemon --ignore 'sessions.db' --ignore 'auth.db' src/index.js",
    "build": "npm run build:css",
    "build:css": "tailwindcss -i ./src/public/css/input.css -o ./src/public/css/style.css --minify",
    "start": "NODE_ENV=production node src/index.js",
    "lint": "eslint src/",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "bcryptjs": "^2.4.3",
    "connect-sqlite3": "^0.9.13",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "gray-matter": "^4.0.3",
    "marked": "^12.0.0",
    "nodemailer": "^6.9.7",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "daisyui": "^4.7.2",
    "eslint": "^8.56.0",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
